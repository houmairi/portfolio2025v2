---
import Breadcrumb from "../../components/Breadcrumb.astro";
import WorkInProgressBanner from "../../components/WorkInProgressBanner.astro"
import Layout from "../../layouts/Layout.astro"

const crumbs = [
  { name: 'Home', href: '/' },
  { name: 'Work', href: '/work' },
  { name: 'Gathr', href: '/work/Gathr' },
];
---

<Layout>
  <main style="font-family: 'Satoshi', sans-serif;" class="flex-grow gap-6">
    <Breadcrumb {crumbs}/>
    <WorkInProgressBanner />
    <img src="/images/Banner_Gathr_Portfolio.webp" alt="Gathr Banner" class="w-full h-full rounded-lg mb-8" />
    <h1  class="text-9xl font-bold mb-4 text-neutral-800">Gathr</h1>
<div class="w-full overflow-hidden rounded-xl shadow-lg">
            <iframe 
                class="w-full h-96 md:h-[500px] lg:h-[600px] mb-8" 
                src="https://embed.figma.com/proto/9Iwl871GSwOHtXGnKslydw/Final-Project---GATHR?page-id=201%3A3265&node-id=218-5385&viewport=527%2C131%2C0.12&scaling=scale-down&content-scaling=fixed&starting-point-node-id=218%3A5400&embed-host=share" 
                allowfullscreen>
            </iframe>
        </div>    <p class="text-2xl font-medium text-neutral-600 mb-8 mt-8">Work in Progress</p>
    
  </main>

</Layout>