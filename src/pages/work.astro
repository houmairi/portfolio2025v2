---
import Breadcrumb from "../components/Breadcrumb.astro"
import WorkInProgressBanner from "../components/WorkInProgressBanner.astro"
import WorkSection from "../components/WorkSection.astro"
import Layout from "../layouts/Layout.astro"

const crumbs = [
  { name: 'Home', href: '/' },
  { name: 'Work', href: '/work' },
];
---

<Layout>
    <main class="flex-grow gap-6 mt-8" style="font-family: 'Satoshi', sans-serif;">
        <Breadcrumb {crumbs} />
        <WorkInProgressBanner />
        <WorkSection />
        
    </main>

</Layout>