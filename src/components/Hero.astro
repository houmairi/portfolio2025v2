<div id="Hero" class="py-20 px-4 md:py-32">
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-8" style="font-family: 'Satoshi', sans-serif;">
        <img src="/images/arjun_img.png" alt="Arjun Bhogal Img" class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover md:order-last" id="heroImage" />
        <div id="herotext" class="flex flex-col md:space-y-3 flex-1">
            <h1 style="font-family: 'Satoshi', sans-serif;" class="text-4xl md:text-8xl font-semibold text-neutral-800">Hi, I'm Arjun Bhogal</h1>
            <h2 style="font-family: 'Satoshi', sans-serif;" class="text-4xl md:text-8xl font-semibold text-neutral-800">A UI/UX Designer</h2>
        </div>
    </div>

    <div class="flex flex-col md:flex-row items-start md:items-center space-y-0 md:space-y-0 md:space-x-4 mt-4 md:mt-0" id="heroFooter">
        <p style="font-family: 'Satoshi', sans-serif;" class="font-grotesk text-xl md:text-2xl font-medium text-neutral-800">
            Based in Vienna, Austria
        </p>
        <div style="font-family: 'Satoshi', sans-serif;" class="font-satoshi flex items-center text-green-600 md:py-2 rounded-3xl max-w-fit">
            <span class="relative flex size-2">
                <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-600 opacity-75"></span>
                <span class="relative inline-flex size-2 rounded-full bg-green-600"></span>
            </span>
            <p class="px-1 italic text-lg md:text-xl font-medium">Open to work</p>
        </div>
    </div>
</div>

<script>
    import { gsap } from 'gsap';
    
    document.addEventListener('DOMContentLoaded', () => {
        const tl = gsap.timeline();
        
        // Text von unten
        tl.from("#herotext h1", {
            duration: 1,
            y: 80,
            opacity: 0,
            ease: "power2.out"
        })
        .from("#herotext h2", {
            duration: 1,
            y: 80,
            opacity: 0,
            ease: "power2.out"
        }, "-=0.7")
        
        .from("#heroImage", {
            duration: 0.8,
            y: 50,
            opacity: 0,
            ease: "power2.out"
        }, "-=0.7")
        
        // Footer von unten
        .from("#heroFooter", {
            duration: 0.8,
            y: 50,
            opacity: 0,
            ease: "power2.out"
        }, "-=0.7");
    });
</script>