---
export interface Props {
  name: string;
  description: string;
  html_url: string;
  language?: string;
}

const { name, description, html_url, language } = Astro.props;
---

<div class="bg-neutral-100 rounded-lg p-4 sm:p-6 hover:bg-neutral-200 transition-all duration-300 group w-full min-w-0">
  <div class="flex flex-col h-full">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-lg sm:text-xl font-semibold text-neutral-800 group-hover:text-neutral-900 transition-colors break-words">
        {name}
      </h3>
      {language && (
        <span class="text-sm px-2 py-1 bg-neutral-300 text-neutral-700 rounded-full">
          {language}
        </span>
      )}
    </div>
    
    <p class="text-neutral-600 text-sm mb-4 flex-grow leading-relaxed">
      {description}
    </p>
    
    <a 
      href={html_url} 
      target="_blank" 
      rel="noopener noreferrer"
      class="text-neutral-800 hover:text-neutral-900 font-medium text-sm transition-colors inline-flex items-center gap-1"
    >
      View on GitHub
      <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
    </a>
  </div>
</div>
